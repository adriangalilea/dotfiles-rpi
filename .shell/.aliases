#!/usr/bin/env bash

# --- override ex ---

alias ex='~/.shell/utils/ex'

# --- general aliases ---

alias salsa="source ~/.zshrc"
alias x="chmod +x"
alias x\*="x *"
alias g="lazygit"
alias h="hx"
alias t="taskwarrior-tui"
alias mkdir="mkdir -p"
alias md="mkdir"
alias rd="rmdir"
alias ai="mods"
alias grep="grep --color=auto"         # colorize output (good for log files)
alias cat="bat --paging never --decorations never --plain"

# --- python venv ---

alias pyenv="python3 -m venv venv && echo -e 'layout python python3\nsource venv/bin/activate\nwatch_file .envrc' > .envrc && direnv allow"

# --- file listing ---

alias ls="eza --color=always --icons --group-directories-first --time-style relative"
alias l="ls"
alias la="ls -lah"
alias ll="ls -l"
alias lt="ls -R -T"

# --- disk usage ---

alias df="df -h"                       # human-readable sizes
alias diskspace="df /"
alias disk="diskspace"
alias space="diskspace"
alias s="diskspace"

# --- process management ---

alias psa="ps auxf"
alias psgrep="ps aux | grep -v grep | grep -i -e VSZ -e"
alias psmem="ps auxf | sort -nr -k 4"
alias pscpu="ps auxf | sort -nr -k 3"
alias free="free -m"                   # show sizes in MB

# --- git status ---

alias ,="git status --short --ignored ."    # recursive
alias ,.='git status --short --ignored $(find . -maxdepth 1 -type f)'  # non-recursive

# --- git secret ---

alias add="git secret add"
alias hide="git secret hide"
alias reveal="git secret reveal"
alias tell="git secret tell"
alias remove="git secret remove"
alias secrets="git secret list"
alias secret-help="git secret usage"   # list commands

# --- misc utilities ---

alias pubkey="cat ~/.ssh/id_rsa.pub | pbcopy | echo '=> Public key copied to pasteboard.'"
alias shrug="echo '¯\_(ツ)_/¯' | pbcopy | echo '=> Copied to pasteboard.'"

# --- compatibility aliases ---

alias helix="hx"
alias bat="batcat"                     # bat is batcat in ubuntu
alias fd="fdfind"                      # fd is fdfind in ubuntu
